{
	"compilerOptions": {
		"target": "ES2020",
		"declaration": true,
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"types": [
			"node"
		],
		"jsx": "react",
		"jsxFactory": "jsx",
		"jsxFragmentFactory": "Fragment",
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.mts",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	],
}